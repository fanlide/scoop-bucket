{
    "version": "0.8.0-beta",
    "homepage": "https://u.tools/",
    "extract_dir": "$PLUGINSDIR",
    "extract_to": "PLUGINSDIR",
    "checkver": {
        "url": "https://resource.u-tools.cn/version/latest.yml",
        "regex": "version: (.*)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://resource.u-tools.cn/version/uTools-$version.exe#/uTools.7z"
            },
            "32bit": {
                "url": "https://resource.u-tools.cn/version/uTools-$version-ia32.exe#/uTools.7z"
            }
        }
    },
    "architecture": {
        "64bit": {
            "url": "https://resource.u-tools.cn/version/uTools-0.8.0-beta.exe#/uTools.7z",
            "installer": {
                "script": "7z x $original_dir/PLUGINSDIR/app-64.7z -o\"$original_dir\""
            }
        },
        "32bit": {
            "url": "https://resource.u-tools.cn/version/uTools-0.8.0-beta-ia32.exe#/uTools.7z",
            "installer": {
                "script": "7z x $original_dir/PLUGINSDIR/app-32.7z -o\"$original_dir\""
            }
        }
    },
    "post_install": "rm $original_dir/PLUGINSDIR -recurse",
    "shortcuts": [["uTools.exe", "uTools"]]
}
